<% extend('../layout/layout_auth') %>

<div class="wrap-auth">
  <h1>Note Application</h1>
  <form class="form-auth" action="/auth/signup" method="POST">
    <h2 class="mb-3 text-center">註冊</h2>

    <% if (hasError) { %>
      <div class="alert alert-danger rounded-0">
        <%- error %>
      </div>
    <% } %>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="請輸入 Email" required>
    </div>
    <div class="form-group">
      <label for="password">密碼</label>
      <input type="password" id="password" name="password" class="form-control" placeholder="請輸入密碼" required>
    </div>
    <div class="form-group mb-4">
      <label for="nickname">暱稱</label>
      <input type="text" id="nickname" name="nickname" class="form-control" placeholder="請輸入暱稱" required>
    </div>

    <button class="btn btn-primary btn-block" type="submit">送出</button>
  </form>
  <a href="/auth/signin" class="my-3 text-muted">
    已經有帳號了？登入去！
    <i class="fas fa-arrow-alt-circle-right"></i>
  </a>
</div>
