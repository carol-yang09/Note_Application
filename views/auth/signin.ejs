<% extend('../layout/layout_auth') %>

<ul class="alert alert-warning test-account">
  <li>測試帳號： <%- testAccount.email %></li>
</ul>

<div class="wrap-auth">
  <h1>Note Application</h1>
  <form class="form-auth" action="/auth/signin" method="POST">
    <h2 class="mb-3 text-center">登入</h2>

    <% if (hasError) { %>
      <div class="alert alert-danger rounded-0">
        <%- error %>
      </div>
    <% } %>

    <div class="form-group">
      <label for="email">Email</label>
      <input type="email" id="email" name="email" class="form-control"
       placeholder="請輸入 Email" value="<%- testAccount.email %>" required>
    </div>
    <div class="form-group mb-4">
      <label for="password">密碼</label>
      <input type="password" id="password" name="password" class="form-control"
       placeholder="請輸入密碼" value="<%- testAccount.password %>" required>
    </div>

    <button class="btn btn-primary btn-block" type="submit">確認</button>
  </form>
  <a href="/auth/signup" class="my-3 text-muted">
    沒有帳號？來註冊吧！
    <i class="fas fa-arrow-alt-circle-right"></i>
  </a>
</div>
