<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item <% if(!page.hasPre) { %> disabled <% } %>">
      <a class="page-link" aria-label="Previous" href="<%- page.path %>&page=<%- page.currentPage - 1 %>">
        <span aria-hidden="true">&laquo;</span>
      </a>
    </li>

    <% for (let i = 1; i < page.pageTotal + 1; i+=1) { %>
      <li class="page-item <% if(i === page.currentPage) { %> active <% } %>">
        <a class="page-link" href="<%- page.path %>&page=<%- i %>"><%- i %></a>
      </li>
    <% } %>

    <li class="page-item <% if(!page.hasNext) { %> disabled <% } %>">
      <a class="page-link" aria-label="Next" href="<%- page.path %>&page=<%- page.currentPage + 1 %>">
        <span aria-hidden="true">&raquo;</span>
      </a>
    </li>
  </ul>
</nav>