<% extend('layout/layout') %>

<div class="col-12 col-md main">
  <h2 class="mb-4 text-center">帳號設定</h2>
  <div class="option-card mb-4">
    <h3 class="option-title">帳號資料</h3>
    <div class="option-body pb-3">

      <% if (hasError) { %>
        <div class="alert alert-danger rounded-0">
          <%- error %>
        </div>
      <% } %>

      <div class="form-group row">
        <label for="email" class="col-sm-2 col-form-label">
          帳號
        </label>
        <div class="col-sm-6 col-lg-7 mb-3 mb-sm-0">
          <input type="email" name="email" id="email" class="form-control" value="<%- userEmail %>" disabled>
        </div>
      </div>

      <div class="form-group row">
        <label for="password" class="col-sm-2 col-form-label">
          密碼
        </label>
        <div class="col-sm-6 col-lg-7 mb-3 mb-sm-0">
          <input type="password" name="password" id="password" class="form-control" placeholder="請輸入新密碼">
        </div>
        <div class="col-sm-4 col-lg-3">
          <button type="submit" class="btn btn-primary js-updateUser">更新密碼</button>
        </div>
      </div>

      <div class="form-group row">
        <label for="nickname" class="col-sm-2 col-form-label">
          暱稱
        </label>
        <div class="col-sm-6 col-lg-7 mb-3 mb-sm-0">
          <input type="text" name="nickname" id="nickname" class="form-control" placeholder="請輸入新暱稱">
        </div>
        <div class="col-sm-4 col-lg-3">
          <button type="submit" class="btn btn-primary js-updateUser">更新暱稱</button>
        </div>
      </div>
    </div>
  </div>

  <div class="option-card">
    <h3 class="option-title">刪除帳號</h3>
    <div class="option-body">
      <button type="button" class="btn btn-outline-danger js-openModal"
        data-ref="user"
        data-title="<%- userEmail %> 帳號"
      >
        刪除此帳號
      </button>
    </div>
  </div>
</div>

<script>

</script>